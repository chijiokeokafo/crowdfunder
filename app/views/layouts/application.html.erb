<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>
<p class="userinfo">
	<% if current_user %>
	Signed in as <%= current_user.first_name %>. <%= link_to "Log out", logout_path %>
	<% else %>
	<%= link_to "Log in", login_path %> or <%= link_to "Sign up", signup_path %>
	<% end %>
</p>
<p>
	|&nbsp;<%= link_to "Home", projects_path %>&nbsp;|&nbsp;
	<%= link_to "My Profile", profile_path if current_user %>&nbsp;|
</p>
</body>
</html>
