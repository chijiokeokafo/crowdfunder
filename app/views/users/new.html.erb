<h1>Sign up!</h1>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@user.errors.count, "error") %> Prohibited you from creating a user</h2>
			<ul>
				<% @user.errors.full_messages.each do |m| %>
				<li><%= m %></li>
			</ul>
			<% end %>
		</div>
		<% end %>
	<div class="feild">
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
		</div>

		<div class="feild">
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
		</div>

		<div class="feild">
		<%= f.label :email %>
		<%= f.text_field :email %>
		</div>

		<div class="feild">
		<%= f.label :password %>
		<%= f.password_field :password %>
		</div>

		<div class="feild">
		<%= f.label :password_confirmation%>
		<%= f.password_field :password_confirmation %>
		</div>

		<%= f.submit %>
	<% end %>